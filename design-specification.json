{
  "projectInfo": {
    "name": "Instagram Clone - Web Edition",
    "version": "1.0.0",
    "description": "A modern, web-optimized social media platform inspired by Instagram with enhanced desktop experience",
    "designSystem": "Instagram Clone Design System v1",
    "deployment": {
      "platform": "Netlify",
      "buildCommand": "npm run build",
      "publishDirectory": "dist",
      "nodeVersion": "18.x"
    }
  },

  "designStyle": {
    "approach": "Clean, modern, and minimalist with emphasis on visual content",
    "philosophy": "Content-first design with subtle interface elements that don't compete with user-generated photos and videos",
    "targetAudience": {
      "primary": "Content creators and visual storytellers (18-45 years)",
      "secondary": "Casual users sharing moments with friends and family",
      "tertiary": "Businesses and brands building online presence"
    },
    "useCases": [
      "Photo and video sharing",
      "Social networking and engagement",
      "Content discovery and exploration",
      "Direct messaging",
      "Stories and ephemeral content",
      "Profile customization and personal branding"
    ],
    "brandPersonality": {
      "traits": ["Modern", "Friendly", "Visual", "Engaging", "Trustworthy"],
      "tone": "Casual yet polished, encouraging creativity and authentic expression",
      "aesthetics": "Clean lines, generous whitespace, photography-focused, subtle animations"
    }
  },

