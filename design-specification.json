  "layout": {
    "type": "Multi-page application with persistent navigation",
    "structure": "Three-column layout (desktop), Single-column (mobile)",
    "gridSystem": {
      "type": "CSS Grid and Flexbox hybrid",
      "columns": 12,
      "gutter": "16px",
      "margin": "20px"
    },
    "spacing": {
      "scale": [0, 4, 8, 12, 16, 20, 24, 32, 40, 48, 64, 80, 96, 128],
      "names": ["none", "xs", "sm", "md", "lg", "xl", "2xl", "3xl", "4xl", "5xl", "6xl", "7xl", "8xl", "9xl"]
    },
    "containers": {
      "maxWidth": {
        "feed": "630px",
        "modal": "500px",
        "profile": "935px",
        "explore": "975px",
        "fullWidth": "100%"
      }
    },
    "breakpoints": {
      "xs": "0px",
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    }
  },

  "deployment": {
    "platform": "Netlify",
    "requirements": {
      "nodeVersion": "18.x or later",
      "buildCommand": "npm run build",
      "publishDirectory": "dist or build",
      "functionsDirectory": "netlify/functions"
    },
    "steps": {
      "automatic": [
        "1. Log in to Netlify (https://app.netlify.com)",
        "2. Click 'Add new site' â†’ 'Import an existing project'",
        "3. Connect to GitHub and select instagram-clone-v1 repository",
        "4. Configure build settings (auto-detected)",
        "5. Set environment variables in Netlify dashboard",
        "6. Click 'Deploy site'",
        "7. Netlify will auto-deploy on every push to main"
      ],
      "manual": [
        "1. Install Netlify CLI: npm install -g netlify-cli",
        "2. Build the project: npm run build",
        "3. Login to Netlify: netlify login",
        "4. Initialize site: netlify init",
        "5. Deploy: netlify deploy --prod"
      ]
    }
  }
}
